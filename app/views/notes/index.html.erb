<h1>Notes</h1>

<p><a href="/new_note">Add a New Note</a></p>

<table>
  <thead>
    <tr>
      <th>Student</th>
      <th>Contents</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @notes.each do |note| %>
    <tr>
          <td><%= note.student_id %></td>
          <td><%= note.contents %></td>
          <td><a href="/notes/<%= note.id %>">Show</a>
